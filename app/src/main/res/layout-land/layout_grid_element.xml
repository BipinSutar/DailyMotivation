<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/author_card_view"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin_micro"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_elevation"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/grid_element_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:contentDescription="@string/grid_imageview_desc"
            android:scaleType="centerCrop"
            android:transitionName="@string/authorimage_transition" />

        <TextView
            android:id="@+id/grid_element_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:minHeight="60dp"
            android:paddingLeft="@dimen/activity_margin_medium"
            android:paddingRight="@dimen/activity_margin_medium"
            android:textColor="@android:color/white"
            android:textSize="@dimen/authorname_text_size"
            android:textStyle="bold" />

    </LinearLayout>
</android.support.v7.widget.CardView>